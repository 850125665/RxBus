<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/post_msg_recv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收到的消息:" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/post_sticky_msg_recv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收到的sticky消息:" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/post_msg_recv_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="来自方法收到的消息:" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/post_sticky_msg_recv_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="来自方法收到的sticky消息:" />
    </LinearLayout>
</LinearLayout>